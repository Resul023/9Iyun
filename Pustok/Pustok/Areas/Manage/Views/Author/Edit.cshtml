@model Authors
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form asp-action="Edit" method="post">

                <div class="form-group">
                    <label asp-for="FullName" for="FullName">Full name</label>
                    <input asp-for="FullName" name="FullName" type="text" class="form-control">
                    <span asp-validation-for="FullName" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Age" for="Age">Age</label>
                    <input asp-for="Age" name="Age" type="number" class="form-control">
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
